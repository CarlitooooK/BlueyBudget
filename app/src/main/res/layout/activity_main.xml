<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/accent_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="110dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluey_money"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/carter"
        android:textSize="32sp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:layout_height="2dp">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maneja_tus_finanzas_preciosa"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="17sp"
        android:paddingBottom="20dp"
        android:fontFamily="@font/infra_bold">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/bluey_money"
        android:src="@drawable/bluey__svg">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ingresa_tu_usuario"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/usuario"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_et"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/carter"
            android:background="@drawable/background_et"
            android:inputType="textPassword">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_text"
        android:text="@string/entrar"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/background_et"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/pista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pista_de_contrase_a_jim"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="@font/inter">
    </TextView>

</LinearLayout>